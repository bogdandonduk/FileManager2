<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pro.filemanager">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".FileManager"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FileManager">

        <activity android:name=".images.library.ImageLibraryActivity" android:theme="@style/StyleSlidrHost" />

        <activity android:name=".settings.SettingsActivity" android:theme="@style/StyleSlidrHost" />

        <activity android:name=".home.HomeActivity" />

        <activity-alias
            android:name="LauncherActivity"
            android:targetActivity=".home.HomeActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity-alias>

    </application>
</manifest>